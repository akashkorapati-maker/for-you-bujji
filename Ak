<body>

    <div class="container" id="mainCard">
        <h1 id="questionText">Will you be my Valentine? ðŸŒ¹</h1>
        <div class="btn-group">
            <button id="yesBtn">YES</button>
            <button id="noBtn">NO</button>
        </div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const mainCard = document.getElementById('mainCard');
        const questionText = document.getElementById('questionText');

        // 1. The "Evasive" No Button Logic
        noBtn.addEventListener('mouseover', () => {
            const maxX = window.innerWidth - noBtn.offsetWidth;
            const maxY = window.innerHeight - noBtn.offsetHeight;

            // Generate random positions
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);

            noBtn.style.left = randomX + 'px';
            noBtn.style.top = randomY + 'px';
        });

        // 2. The "Yes" Success Logic
        yesBtn.addEventListener('click', () => {
            // Change the text and hide buttons
            questionText.innerHTML = "I knew it! See you on Feb 14th! ðŸ¥°â¤ï¸";
            noBtn.style.display = 'none';
            yesBtn.style.display = 'none';

            // Start falling hearts
            setInterval(createHeart, 150);
        });

        // 3. Heart Animation Function
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = 'â¤ï¸';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 2 + 3 + 's';
            document.body.appendChild(heart);

            setTimeout(() => { heart.remove(); }, 5000);
        }
    </script>
</body>
